!!! 5
%html
%head
  %title
    = if content_for?(:title) then yield(:title) + ' | ' end
    Chatbot.Events
  %meta{ :property => 'og:title', :content => "#{yield_meta_tag('og:title', 'Chatbot.Events')}" }
  %meta{ :property => 'og:site_name', :content => "#{yield_meta_tag('og:site_name', 'Chatbot.Events')}" }
  %meta{ :property => 'og:url', :content => "#{yield_meta_tag('og:url', 'http://www.chatbot.events')}" }
  %meta{ :property => 'og:description', :content => "#{yield_meta_tag('og:description', 'Find events relating to Chatbots')}" }
  %meta{ :property => 'og:image', :content => "#{yield_meta_tag('og:image', image_url('Logo-Layout.png'))}" }
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
%body
  %nav.navbar.navbar-fixed-top
    .container
      %a.navbar-brand{href:"#"}
        = image_tag("logo_small.png", height: 50, class:"pull-left")
        %h1.pull-left.logo
          CHATBOT.EVENTS
      -#.navbar-items.pull-right
        %button.navbar-toggler.hidden-sm-up{type:"button", data:{toggle:"collapse", target:"#nav"}, aria:{controls:"nav", expanded:"false", label:"Toggle Navigation"}}
          &#9776;
        .collapse.navbar-toggleable-xs{id:"nav"}
          %a.nav-item.nav-link.active{href:"#"}
            Home
            %span.sr-only
              (current)
          %a.nav-item.nav-link{href:"#"}
            Features
  = yield
